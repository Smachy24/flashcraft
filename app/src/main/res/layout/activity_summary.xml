<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">

    <TextView
        android:id="@+id/difficultyLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:text="Niveau de difficultÃ© : Facile" />

    <TextView
        android:id="@+id/good_answersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/difficultyLevelTextView"
        app:layout_constraintStart_toStartOf="@+id/difficultyLevelTextView"
        app:layout_constraintTop_toBottomOf="@+id/difficultyLevelTextView"
        tools:text="4 / 6" />

    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/difficultyLevelTextView"
        app:layout_constraintStart_toStartOf="@+id/difficultyLevelTextView"
        app:layout_constraintTop_toBottomOf="@+id/good_answersTextView"
        tools:text="30%" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/statistiques__minecraft" />

</androidx.constraintlayout.widget.ConstraintLayout>