<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="72dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/itembar" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prompt_icon_diamond_sword" />

    <TextView
        android:id="@+id/promptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/bold"
        android:maxLength="15"
        android:text="prompt"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/iconImageView"
        app:layout_constraintStart_toEndOf="@+id/iconImageView"
        app:layout_constraintTop_toTopOf="@+id/iconImageView"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="#FFFFFF"
        android:text="difficulty"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="@+id/activityButton"
        app:layout_constraintEnd_toStartOf="@+id/activityButton"
        app:layout_constraintTop_toTopOf="@+id/activityButton"
        app:layout_constraintVertical_bias="0.517" />

    <Button
        android:id="@+id/activityButton"
        android:layout_width="77dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_minecraft"
        android:fontFamily="@font/regular"
        android:text="GO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>